<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<div>
			<h2>User info</h2>
			<div>
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
			</div>
			<div>
				<table class="table">
					<tr>
						<th scope="row">
							<td>name</td>
							<td><%= @user.name %></td>
						</th>
					</tr>
					<tr>
						<th scope="row">
							<td>introduction</td>
							<td><%= @user.introduction %></td>
						</th>
					</tr>
				</table>
			</div>
			<div>
				<%= link_to edit_user_path(@user) do %>
				<span class="btn btn-sm btn-default btn-block glyphicon glyphicon-wrench" aria-hidden="true"></span>
				<% end %>
			</div>
			</div>

			<div>
				<h2>New book</h2>
			    <%= form_for(@book) do |f| %>
	    		<div>
		    		<h5>Title</h5>
			    	<%= f.text_field :title, class: "form-control" %>
		    	</div>
			    <div>
			    	<h5>Opinion</h5>
				    <%= f.text_area :body, class: "form-control" %>
			    </div>
			    <div><h4> </h4></div>
			    <div>
	     			<%= f.submit "Create Book", class: "btn btn-sm btn-primary btn-block active"  %>
		     	</div>
	    		<% end %>
	    	</div>
		</div>


		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table">
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
				</tr>
				<% @users.each do |f| %>
				<tr>
					<td><%= link_to attachment_image_tag f, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
					<td><%= f.name %></td>
					<td><%= link_to "Show", user_path(f) %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>